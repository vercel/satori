{
  "name": "satori",
  "version": "0.0.14-beta.0",
  "description": "Satori converts HTML JSX to SVG string.",
  "module": "./dist/esm/index.js",
  "main": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/esm/index.js",
    "./wasm": "./dist/esm/index.wasm.js"
  },
  "scripts": {
    "dev": "tsup src/index.ts --watch --format esm --legacy-output --ignore-watch playground",
    "types": "tsc --noEmit",
    "build": "pnpm run types && pnpm run build:asmjs && pnpm run build:wasm",
    "build:asmjs": "tsup",
    "build:wasm": "WASM=1 tsup",
    "test": "vitest run",
    "dev:test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vercel/satori.git"
  },
  "keywords": [
    "HTML",
    "JSX",
    "SVG",
    "converter",
    "renderer"
  ],
  "author": "Shu Ding <g@shud.in>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vercel/satori/issues"
  },
  "homepage": "https://github.com/vercel/satori#readme",
  "devDependencies": {
    "@types/node": "^17.0.13",
    "@types/opentype.js": "^1.3.3",
    "@types/react": "^17.0.38",
    "@types/yoga-layout": "^1.9.4",
    "react": "^17.0.2",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5",
    "vitest": "^0.2.5"
  },
  "dependencies": {
    "css-background-parser": "^0.1.0",
    "css-line-break": "^2.1.0",
    "css-to-react-native": "^3.0.0",
    "opentype.js": "^1.3.4",
    "parse-css-dimension": "^1.1.0",
    "text-segmentation": "^1.0.3",
    "yoga-layout-prebuilt": "^1.10.0"
  }
}
